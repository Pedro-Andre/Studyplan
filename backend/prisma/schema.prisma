generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String 
  username String @unique
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model Goals {
  id       String @id @default(uuid())
  name     String
  category String?
  priority String
  createdAt DateTime @default(now())
  finishBy DateTime
}
