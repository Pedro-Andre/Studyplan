generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String 
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  
  // Relacionamentos
  goals     Goals[] 
  events    Event[]  
}

model Goals {
  id           String        @id @default(uuid())
  name         String
  category     String?
  priority     String
  status       String        @default("Não Iniciado") // "Não Iniciado", "Em Progresso", "Finalizado"
  totalTime    Int           @default(0) // Tempo total em segundos
  createdAt    DateTime      @default(now())
  finishBy     DateTime
  completedAt  DateTime?     // Data de conclusão real
  userId       String  
  
  // Relacionamentos
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeSessions TimeSession[] // Sessões de tempo trabalhado
}

model TimeSession {
  id        String   @id @default(uuid())
  goalId    String
  startTime DateTime
  endTime   DateTime?
  duration  Int      @default(0) // Duração em segundos
  createdAt DateTime @default(now())
  
  // Relacionamento
  goal      Goals    @relation(fields: [goalId], references: [id], onDelete: Cascade)
  
  @@map("time_sessions")
}

model Event {
  id        String   @id @default(uuid())  
  title     String
  start     DateTime
  end       DateTime
  desc      String?
  color     String   @default("#2196f3")
  userId    String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("events")
}
